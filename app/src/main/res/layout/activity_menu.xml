<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:padding="10dp"
    tools:context="app.fuelfinder.MenuActivity">


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_below="@+id/welcome"
        android:id="@+id/text_email"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="abc@xyz.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_FuelFinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_email"
        android:layout_alignStart="@+id/text_email"
        android:layout_below="@+id/text_email"
        android:layout_marginTop="15dp"
        android:text="Fuel Finder" />

    <Button
        android:id="@+id/btn_InsuranceDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_FuelFinder"
        android:layout_alignStart="@+id/btn_FuelFinder"
        android:layout_below="@+id/btn_FuelFinder"
        android:layout_marginTop="17dp"
        android:text="Insurance details" />

    <Button
        android:id="@+id/btn_MotTax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_InsuranceDetails"
        android:layout_alignStart="@+id/btn_InsuranceDetails"
        android:layout_below="@+id/btn_InsuranceDetails"
        android:layout_marginTop="17dp"
        android:text="Mot and Road Tax" />
    
    
    

</RelativeLayout>
